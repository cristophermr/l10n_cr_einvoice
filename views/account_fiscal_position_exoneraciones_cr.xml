<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_fiscal_position_exoneraciones_cr_form" model="ir.ui.view">
	    <field name="name">account.fiscal.position.exoneraciones_cr.form</field>
        <field name="model">account.fiscal.position.exoneraciones_cr</field>
        <field name="arch" type="xml">
            <form string="">
             <sheet>
                <group>

                   <group>
                       <field name="name" />
                   </group>

	           <group/>

                   <group>
                       <field name="partner_id"  string="Contacto"/>
                       <field name="partner_vat" string="Identificación" style="margin-bottom:30px;"/>
                       <field name="fiscal_position_type"/>
                       <field name="institution_name" string="Emisor"/>
		       <field name="autorizacion"/>
                       <field name="cfia_project_code"/>
                   </group>
	
		   <group>
                       <field name="has_cabys"/>
                       <field name="exoneration_percentage"/>
                       <field name="issued_date"/>
                       <field name="expiration_date"/>
                   </group>
                </group>
              </sheet>
            </form>
        </field>
    </record>
    
    <record id="account_fiscal_position_exoneraciones_cr_form_view_tree" model="ir.ui.view">
      <field name="name">account.fiscal.position.exoneraciones_cr.view.tree</field>
      <field name="model">account.fiscal.position.exoneraciones_cr</field>
      <field name="arch" type="xml">
        <tree string="">
          <field name="name"/>
          <field name="issued_date" />
          <field name="expiration_date" />
          <field name="fiscal_position_type"/>
        </tree>
      </field>
    </record>
    
    <record id="account_fiscal_position_exoneraciones_cr_form_view_search" model="ir.ui.view">
      <field name="name">account.fiscal.position.exoneraciones_cr.view.search</field>
      <field name="model">account.fiscal.position.exoneraciones_cr</field>
      <field name="arch" type="xml">
        <search string="">
              <field name="institution_name" string="Empresa" filter_domain="[('institution_name','ilike',self)]"/>
              <field name="name" string="Exoneración" filter_domain="[('name','ilike',self)]"/>
        </search>
      </field>
    </record>

    <record model="ir.actions.act_window" id="account_fiscal_position_exoneraiones_cr_action">
      <field name="name">Exoneraciones Costa Rica</field>
      <field name="res_model">account.fiscal.position.exoneraciones_cr</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Exoneraciones Costa Rica" id="_menu" parent="account.account_account_menu" action="account_fiscal_position_exoneraiones_cr_action"
    sequence="6"/>

</odoo>
