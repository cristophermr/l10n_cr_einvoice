<odoo>
<record id="l10n_cr_einvoice.res_partner_form_inherit" model="ir.ui.view">
  <field name="name">l10n_cr_einvoice.res.partner.form.inherit</field>
  <field name="model">res.partner</field>
  <field name="inherit_id" ref="base.view_partner_form"/>
  <field name="arch" type="xml">
      
    <xpath expr="//field[@name='user_ids']" position="before">
        <field name = "fe_fax_number"/>
    </xpath>

    <xpath expr="//field[@name='vat']" position="before">
        <field name = "fe_comercial_name"/>
        <field name = "fe_identification_type" required="False"/>
    </xpath>

    <xpath expr="//field[@name='vat']" position="after">
        <field name = "fe_receptor_identificacion_extranjero"/>
    </xpath>
      
    <xpath expr="//field[@name='website']" position="before">
        <field name="emails_extra_ids" widget="one2many_list" string="Emails Extras" nolabel="1" colspan="2">
          <tree editable="bottom">
              <field name="email_additional" required="0" string="Emails adicionales"/>
              <field name="email_send" default="1"/>
              <field name="email_main"/>
          </tree>
        </field>
    </xpath>
      
    <xpath expr="//page[@name='internal_notes']" position="after">
        <page name="einvoice_cr" string="Factura Electronica">
            <group>
                <group>
                    <field name="payment_method_default" string="MÃ©todo de pago Default"/>
                    <field name="is_invoice_export_default"/>
                    <field name="has_fiscal_position"/>
                </group>
                <field name="fe_otros_ids" string="Otros" attrs="{'invisible':[('has_fiscal_position', '=', False)]}">
                    <tree editable="bottom">
                        <field name="field_type" placeholder="Tipo de Elemento"/>
                        <field name="attributes_data" placeholder="atributo1=&quot;valor1&quot; atributo2=&quot;valor2&quot;"
                            attrs=" {  'invisible': [  ( 'field_type', 'not in', ['OtroTexto'] )  ]  }  "
                            string="Atributos y sus valores" />
                        <field name="field_data" placeholder="Datos del Campo" string="Texto de Otros"/>
                        <field name="move_type" string="AÃ±adir en"/>
                    </tree>                                  
                </field>
            </group>
        </page>
    </xpath>

  </field>
</record>
</odoo>