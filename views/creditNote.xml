<odoo>
  <!-- Inherit Form view -->
  <record id="account_invoice_form" model="ir.ui.view">
    <field name="name">account.invoice.form</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <field name="journal_id" position="after">
        <field name ="fe_current_country_company_code" invisible="1"/>
        <field name="fe_tipo_documento_referencia" attrs="{'invisible': ['|',('fe_current_country_company_code', '!=', 'CR'),('type','!=','out_refund')]}"/>
        <field name="fe_informacion_referencia_codigo" attrs="{'invisible': ['|',('fe_current_country_company_code', '!=', 'CR'),('type','!=','out_refund')]}"/>
      </field>
    </field>
  </record>
</odoo>