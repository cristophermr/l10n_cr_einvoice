<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<!-- Inherit Form view -->
<record id="l10n_cr_einvoice.res_country_state_form_inherit" model="ir.ui.view">
  <field name="name">l10n_cr_einvoice.res.country.state.form.inherit</field>
  <field name="model">res.country.state</field>
  <field name="inherit_id" ref="base.view_country_state_form"/>
  <field name="arch" type="xml">
    <field name="code" position="after">
       <field name="fe_code"  required='1'/>
    </field>
  </field>
</record>

<record id="l10n_cr_einvoice.res_country_state_tree_inherit" model="ir.ui.view">
  <field name="name">l10n_cr_einvoice.res.country.state.tree.inherit</field>
  <field name="model">res.country.state</field>
  <field name="inherit_id" ref="base.view_country_state_tree"/>
  <field name="arch" type="xml">
    <field name="code" position="after">
       <field name="fe_code" required='1'/>
    </field>
 </field>
</record>

</odoo>