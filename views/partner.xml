<odoo>
  <data>
<!-- Inherit Form view -->
<record id="receptor_res_partner_form" model="ir.ui.view">
  <field name="name">receptor.res.partner.form</field>
  <field name="model">res.partner</field>
  <field name="inherit_id" ref="base.view_partner_form"/>
  <field name="arch" type="xml">
   <field name="vat" position="before">
       <field name ="fe_current_country_company_code" invisible="1"/>
       <field name="fe_canton_id" options="{'no_create': True, 'no_create_edit': True}"
           domain="[('state_id', '=',state_id)]" string = "Canton" required="0"/>
       <field name="fe_district_id" options="{'no_create': True, 'no_create_edit': True}"
           domain="[('canton_id', '=', fe_canton_id)]" string = "Distrito" required="0"/>
       <field name="fe_neighborhood_id" options="{'no_create': True, 'no_create_edit': True}"
           domain="[('district_id', '=', fe_district_id)]" string = "Barrio"/>
       <field name = "fe_other_signs" required="0"/>
       <field name = "fe_receptor_otras_senas_extranjero"/>
       <field name = "fe_comercial_name"/>
       <field name = "fe_identification_type" required="0"/>

   </field>
    <field name="vat" position="after">
       <field name = "fe_receptor_identificacion_extranjero" attrs="{'invisible': [('fe_current_country_company_code', '!=', 'CR')]}"/>
       <field name = "fe_fax_number" attrs="{'invisible': [('fe_current_country_company_code', '!=', 'CR')]}"/>
    </field>

  </field>
</record>

<record id="emisor_res_company_form" model="ir.ui.view">
  <field name="name">emisor.res.company.form</field>
  <field name="model">res.company</field>
  <field name="inherit_id" ref="base.view_company_form"/>
  <field name="arch" type="xml">
            <xpath expr="//page" position="after">
               <field name ="fe_current_country_company_code" invisible="1"/>
               <page name="" string="Facturacion electronica" attrs="{'invisible': [('fe_current_country_company_code', '!=', 'CR')]}">
                  <form>
                      <sheet>
                         <group>
                             <field name="fe_url_server" string="Server URL"/>
                             <field name="fe_certificate_name" invisible = "1"/>
                             <field name="fe_certificate" filename='fe_certificate_name'/>
                             <field name="fe_password_certificate" password='1'  attrs="{'required':  [('fe_current_country_company_code', '=', 'CR')]}"/>
                             <field name="fe_user_name"/>
                             <field name="fe_user_password" password='1'  attrs="{'required':  [('fe_current_country_company_code', '=', 'CR')]}"/>
                          </group>
                          <button name='update_credentials_server_side' string="Actualizar"  type="object" class="oe_highlight" />
                          <group>
                            <field name="fe_activity_code_ids">
                             <tree editable="1">
                                  <field name="code" required='1'/>
                                  <field name="description" required='1'/>
                             </tree>
                            </field>
                         </group>
                      </sheet>
                  </form>
               </page>
            </xpath>
            <field name="country_id" position="replace">
              <field name="country_id" required="1" placeholder="Country"/>
            </field>
            <field name="vat" position="before">
                <field name = "fe_comercial_name" attrs="{'invisible':  [('fe_current_country_company_code', '!=', 'CR')]}"/>
                <field name="fe_identification_type" attrs="{'invisible':  [('fe_current_country_company_code', '!=', 'CR')],'required':  [('fe_current_country_company_code', '=', 'CR')]}"/>
            </field>

            <field name="report_header" position="before">
                <field name="fe_canton_id" options="{'no_create': True, 'no_create_edit': True}"
                    domain="[('state_id', '=', state_id)]" string = "Canton" attrs="{'invisible':  [('fe_current_country_company_code', '!=', 'CR')],'required':  [('fe_current_country_company_code', '=', 'CR')]}"/>
                <field name="fe_district_id" options="{'no_create': True, 'no_create_edit': True}"
                    domain="[('canton_id', '=', fe_canton_id)]" string = "Distrito" attrs="{'invisible':  [('fe_current_country_company_code', '!=', 'CR')],'required':  [('fe_current_country_company_code', '=', 'CR')]}"/>
                <field name="fe_neighborhood_id" options="{'no_create': True, 'no_create_edit': True}"
                    domain="[('district_id', '=', fe_district_id)]"  string = "Barrio" attrs="{'invisible':  [('fe_current_country_company_code', '!=', 'CR')]}"/>
                <field name = "fe_other_signs" attrs="{'invisible':  [('fe_current_country_company_code', '!=', 'CR')],'required':  [('fe_current_country_company_code', '=', 'CR')]}"/>
            </field>

            <field name="phone" position="before" attrs="{'required','=',1}">
              <field name = "fe_fax_number" attrs="{'invisible':  [('fe_current_country_company_code', '!=', 'CR')]}"/>
            </field>
  </field>
  </record>
  </data>
</odoo>
