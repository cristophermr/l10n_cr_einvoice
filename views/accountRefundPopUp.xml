<odoo>
 <!-- Inherit Form view -->
 <record id="account_invoice_refund_form_inherit" model="ir.ui.view">
   <field name="name">account.invoice.refund.form</field>
   <field name="model">account.invoice.refund</field>
   <field name="inherit_id" ref="account.view_account_invoice_refund"/>
   <field name="arch" type="xml">
     <field name="date" position="after">
        <field name="fe_payment_type" required="1"/>
        <field name="payment_term_id" required="1"/>
        <field name="fe_receipt_status" required="1"/>
        <field name="fe_activity_code_id" required="1"/>
        <field name="fe_tipo_documento_referencia" required="1"/>
     </field>
   </field>
 </record>
 
</odoo>