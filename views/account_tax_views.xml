<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<record id="l10n_cr_einvoice.account_tax_form" model="ir.ui.view">
    <field name="name">l10n_cr_einvoice.account.tax.form</field>
    <field name="model">account.tax</field>
    <field name="inherit_id" ref="account.view_tax_form"/>
    <field name="arch" type="xml">
        <field name="type_tax_use" position="after">
          <field name="type" required='1'  widget="radio"/>
          <field name="codigo_impuesto"
              invisible="type != 'TAX'" />
              <!-- attrs="{'invisible':[('type', '!=', 'TAX')]}" /> -->
          <field name="tarifa_impuesto"
              invisible="type != 'TAX'" />
              <!-- attrs="{'invisible':[('type', '!=', 'TAX')]}" /> -->
          <field name="tipo_documento"
              invisible="type != 'OTHER'" />
              <!-- attrs="{'invisible':[('type', '!=', 'OTHER')]}" /> -->
        </field>
    </field>
</record>
</odoo>