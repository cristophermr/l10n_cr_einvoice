<odoo>
    <data>
       <record model="ir.rule" id="electronic_doc_rule">
       <field name="name">Electronic Doc</field>
       <field name="model_id" ref="l10n_cr_einvoice.model_electronic_doc"/>
       <field name="domain_force"> ['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]</field>
       <field name="active" eval="True"/>
       </record>
    </data>
    <data>
       <record model="ir.rule" id="email_rule">
       <field name="name">Email</field>
       <field name="model_id" ref="l10n_cr_einvoice.model_email"/>
       <field name="domain_force"> ['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]</field>
       <field name="active" eval="True"/>
       </record>
    </data>
</odoo>