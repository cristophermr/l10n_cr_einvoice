<?xml version="1.0" encoding="UTF-8"?>
<odoo>
     <record id="rule_invoices_multi_company_extended" model="ir.rule">
        <field name="name">Invoices Multi Company Rule Extended</field>
        <field name="model_id" ref="account.model_account_invoice"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|', ('company_id', '=', user.company_id.id), ('company_id', 'in', user.company_ids.ids)]</field>
    </record>

    <record id="base.res_company_rule_employee" model="ir.rule">
        <field name="domain_force">['|', ('id', '=', user.company_id.id), ('id', 'in', user.company_ids.ids)]</field>
    </record>
</odoo>
